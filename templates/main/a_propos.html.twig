{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/apropos.css') }}">
{% endblock %}

{% block body %}
    <section>
        <div class="row">
            <div class="col-sm-8 mx-auto">
                <div class="container">
                    <div class="heading">
                        <h2>A Propos de notre association !</h2>
                        <span>Ici, vous en saurez un peu plus sur notre association et nos membres!</span>
                    </div>
                </div>
            </div>
            <div class="col-sm-10 mx-auto">
                <div class="row justify-content-around">
                {% for member in members %}
                        <div class="memberContainer col-12 col-sm-6 col-md-4 col-lg-3 ml-3">
                            <div class="userPictureContainer row">
                                <div class="col-4">
                                    <img src="{{ asset('img/uploads/' ~ member.image) }}" class="userPicture" alt="{{ member.name}}">
                                </div>
                                <div class="col-8">
                                    <h3>{{ member.name | upper  }}</h3>
                                    <p>Role : {{ member.role }}</p>
                                    <p class="text-muted">Statut : {{ member.status }}</p>
                                </div>

                            </div>
                        </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="https://js.stripe.com/v3/"></script>
    <script src="{{ asset('js/apropos.js') }}"></script>
{% endblock %}
