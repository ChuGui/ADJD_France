{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link href='https://fonts.googleapis.com/css?family=Dancing+Script' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('css/homepage.css') }}">
{% endblock %}
{% block title %}
    Association Dynamique pour les Jeunes et le Développement
{% endblock %}
{% block body %}
    <div class="banner">
        <div class="card  text-center mx-auto bg-transparent" style="width: 75%">
            <div class="home-heading">
                <h1 class="home-title">A.D.J.D - Association Dynamique pour les Jeunes et le Développement</h1>
                {% if is_granted('ROLE_ADMIN') %}
                    <div class="edit ml-auto" data-edit-js="{{ textBanner.id }}" data-url-js="{{ path('get_text') }}" data-url-modify-js="{{ path('modify_text') }}">
                        <i class="far fa-edit"></i>
                    </div>
                {% endif %}
                <p id="text-banner" class="introduction edit-js" data-edit-js="{{ textBanner.id }}">{{ textBanner.content }}</p>
            </div>
            <div class="container text-center mt-3">
                <a href="{{ path('help_us') }}" class="btn btn-primary mx-auto">FAIRE UN DON</a>
            </div>

        </div>
    </div>

    <section id="explication" style="width: 100%">
        <div class="container">
            <div class="heading">
                <h2 id="bienvenue">Bienvenue !</h2>

                <p class="sous-titre">L'Association Dynamique pour les Jeunes et le Développement est heureuse de vous acceuillir sur son site !</p>
            </div>

            <div class="media flex-wrap align-items-center justify-content-center my-3">
                <img class="col-12 col-lg-4 " src="{{ asset('img/elements/5_men_1_heart.svg') }}" alt="Présentation de l'adjd">
                <div class="media-body col-12 col-lg-8">
                    <h3 class="mt-3 mt-md-0 text-center text-md-left">Qui sommes-nous ?</h3>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="edit ml-auto" data-edit-js="{{ panneau01.id }}" data-url-js="{{ path('get_text') }}" data-url-modify-js="{{ path('modify_text') }}">
                            <i class="far fa-edit"></i>
                        </div>
                    {% endif %}
                    <p class="text-justify edit-js" data-edit-js="{{ panneau01.id }}">{{ panneau01.content }}</p>
                </div>
            </div>

            <div class="media flex-wrap align-items-center justify-content-center my-3">
                <img class="col-12 col-md-4 order-sm-2" src="{{ asset('img/elements/goal.svg') }}" alt="Objectifs de l'adjd">
                <div class="media-body col-12 col-md-8 order-sm-1">
                    <h3 class="mt-3 mt-md-0 text-center text-md-left">Notre objectif !</h3>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="edit ml-auto" data-edit-js="{{ panneau02.id }}" data-url-js="{{ path('get_text') }}" data-url-modify-js="{{ path('modify_text') }}">
                            <i class="far fa-edit"></i>
                        </div>
                    {% endif %}
                    <p class="text-justify edit-js" data-edit-js="{{ panneau02.id }}">{{ panneau02.content }}</p>
                </div>
            </div>


            <div class="media flex-wrap align-items-center justify-content-center my-3">
                <img class="col-12 col-md-4" src="{{ asset('img/elements/school.svg') }}" alt="Les activités de l'adjd">
                <div class="media-body col-12 col-md-8">
                    <h3 class="mt-3 mt-md-0 text-center text-md-left">Nos activités</h3>
                    {% if is_granted('ROLE_ADMIN') %}
                        <div class="edit ml-auto" data-edit-js="{{ panneau03.id }}" data-url-js="{{ path('get_text') }}" data-url-modify-js="{{ path('modify_text') }}">
                            <i class="far fa-edit"></i>
                        </div>
                    {% endif %}
                    <p class="text-justify edit-js" data-edit-js="{{ panneau03.id }}">{{ panneau03.content }} </p>
                </div>
            </div>
            <div class="container text-center mt-3">
                <a href="{{ path('projects') }}" class="btn btn-primary mx-auto">NOS PROJETS</a>
            </div>
        </div>{#Container#}
    </section>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/homepage.js') }}"></script>
{% endblock %}
